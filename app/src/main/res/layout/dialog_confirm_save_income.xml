<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4cae4a"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingTop="24dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cash"/>

    </LinearLayout>

    <TextView
        android:id="@+id/confirm_income_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="¿Deseas registar estos ingresos?"
        android:textColor="#000000"
        android:textSize="23sp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="20dp"
        android:stretchColumns="1">

        <TableRow>

            <TextView
                android:padding="3dp"
                android:text="Efectivo"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/total_amount_cash"
                android:gravity="right"
                android:padding="3dp"
                android:textSize="17sp"/>
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dp"
                android:text="Vales de despensa"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/total_food_coupons"
                android:gravity="right"
                android:padding="3dp"
                android:text="@string/msg_total_amount_food_coupons"
                android:textSize="17sp"/>
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dp"
                android:text="Tarjeta de débito"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/total_amount_debit_cards"
                android:gravity="right"
                android:padding="3dp"
                android:text="@string/msg_total_amount_debit_cards"
                android:textSize="17sp"/>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="?android:attr/listDivider"/>

        <TableRow android:paddingTop="7dp">

            <TextView
                android:padding="3dp"
                android:text="Total:"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/total_amount_income"
                android:gravity="right"
                android:padding="3dp"
                android:text="@string/msg_total_income"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </TableRow>
    </TableLayout>

</LinearLayout>
