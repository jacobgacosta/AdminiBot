<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/AdminiBotTheme</item>
        <item name="actionBarStyle">@style/AdminiBotTheme</item>
    </style>

    <!-- ActionBar styles -->
    <style name="AdminiBotTheme" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/global_background</item>
        <item name="background">@color/global_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="colorControlNormal">#FFFFFF</item>
    </style>

    <!-- No action bar -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/global_background</item>
        <item name="colorControlNormal">@color/global_background</item>
        <item name="colorControlActivated">@color/global_background</item>
    </style>

    <!-- primary button -->
    <style name="PrimaryButton" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/global_background</item>
        <item name="colorControlHighlight">@color/global_background_dark</item>
    </style>


</resources>
