<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/AdminiBotTheme</item>
        <item name="actionBarStyle">@style/AdminiBotTheme</item>
    </style>

    <!-- Main theme -->
    <style name="AdminiBotTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/global_background</item>
        <item name="background">@color/global_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="colorControlNormal">#FFFFFF</item>
    </style>

    <!-- No action bar -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/global_background</item>
        <item name="colorControlNormal">@color/global_background</item>
        <item name="colorControlActivated">@color/global_background</item>
    </style>

    <!-- Income Concept EditText theme -->
    <style name="IncomeConceptTextInputLayout" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">#00BCD4</item>
        <item name="colorAccent">#00BCD4</item>
        <item name="colorControlNormal">#00BCD4</item>
        <item name="colorControlActivated">#00BCD4</item>
        <item name="textColorError">#F44336</item>
        <item name="android:textColorHighlight">#00BCD4</item>
        <item name="android:textColorLink">#00BCD4</item>
    </style>

    <!-- AdminiBot AlertDialog theme -->
    <style name="AdminiBotAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#00BCD4</item>
        <item name="android:textColor">#00BCD4</item>
        <item name="android:textColorPrimary">#00BCD4</item>
    </style>

    <!-- Income Movements EditText theme -->
    <style name="IncomeMovementsTextInputLayout" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="textColorError">#F44336</item>
        <item name="android:textColorHighlight">#FFFFFF</item>
        <item name="android:textColorLink">#FFFFFF</item>
    </style>

</resources>
