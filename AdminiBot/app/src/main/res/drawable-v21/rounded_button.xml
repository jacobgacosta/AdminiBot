<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/rounded_button_background_pressed">
    <item>
        <shape android:shape="oval">
            <stroke android:width="4dp" android:color="@color/primary_background"/>
            <solid android:color="@color/rounded_button_background"/>
        </shape>
    </item>
    <item android:id="@android:id/mask">
        <inset android:insetBottom="4dp"
            android:insetLeft="4dp"
            android:insetRight="4dp"
            android:insetTop="4dp">
            <shape android:shape="oval">
                <stroke android:width="4dp" android:color="@color/primary_background"/>
                <solid android:color="@color/rounded_button_background_pressed"/>
            </shape>
        </inset>
    </item>
</ripple>